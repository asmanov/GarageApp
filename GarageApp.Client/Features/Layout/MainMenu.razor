<MudDrawer @bind-Open="@_Open" Anchor="Anchor.Start" Elevation="0" Variant="@DrawerVariant.Responsive" ClipMode="DrawerClipMode.Always" OverlayAutoClose="false">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">MENU</MudText>
    </MudDrawerHeader>
    <MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Tertiary" Class="pa-2">
        <MudNavGroup Title="Add" Expanded="false">
            <MudNavLink Icon="@Icons.Material.Rounded.Garage" Match="NavLinkMatch.All" Href="/GarageApp/add-item" @_Open="false">Garage</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Outlined.BrandingWatermark" Match="NavLinkMatch.All" Href="/GarageApp/add-brand" @_Open="false">Brand</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.LocalShipping" Match="NavLinkMatch.All" Href="/GarageApp/add-model" @_Open="false">Model</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Rounded.LocationCity" Match="NavLinkMatch.All" Href="/GarageApp/add-site" @_Open="false">Site</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Rounded.ManageHistory" Match="NavLinkMatch.All" Href="/GarageApp/add-tacho" @_Open="false">Tacho</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Rounded.CarRepair" Match="NavLinkMatch.All" Href="/GarageApp/add-inspection" @_Open="false">Inspection</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Rounded.EventNote" Match="NavLinkMatch.All" Href="/GarageApp/add-inshurance" @_Open="false">Inshurance</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>

@code {

    [Parameter]
    public bool _Open { get; set; } = false;
}
